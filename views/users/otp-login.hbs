
<section class="vh-100" style="background-image: linear-gradient(to right, rgba(255,0,0,0), rgb(181, 139, 71));">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">OTP Log in</h3>
            {{#if otpLoginErr}}
                <p class="btn-danger">{{otpLoginErr}}</p>
              {{/if}}
              
            <form action="/otp-login" method="POST" >
              <div class="form-outline mb-4">
                <input type="" id="phoneNumber" name="phoneNumber" class="form-control form-control-lg"required/>
                <label class="form-label" for="phoneNumber">Phone Number</label>
              </div>

              {{!-- {{#if loginPasswordErr}}
              <p>{{loginPasswordErr}}</p>
              {{/if}} --}}

              <button class="btn btn-primary btn-lg btn-block" type="submit">Continue</button>
            </form>
        
            <p class="mt-3 tex-center">OR</p>
              <a href="/login"><button class="btn btn-success btn-lg btn-block" type="submit">Login with Email</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>