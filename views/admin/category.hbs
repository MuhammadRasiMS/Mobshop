<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8"
    src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-2 ms-auto mt-4 mb-3">
                <a href="/admin/add-category/" class="btn btn-success ">Add Category</a>
            </div>
            <table class="table mt-5" id="usersTable">
                <h4 class="text-center mb-4">Brand Categories</h4>
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each category}}
                    <tr>
                        <td></td>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td><img  src="/images/product/{{this.img.[0]}}" style="height: 50px; width: 45px;" alt=""></td>
                        <td>
                            <a style="color: white; text-decoration: none;" href="/admin/delete-category/{{this._id}}"
                                onclick="return confirm('do you want to delete {{this.name}}')"><button
                                    class="btn btn-danger">delete</button></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>


<script>
    var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

    for (var i = 1,len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i;
    }
</script>
<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>