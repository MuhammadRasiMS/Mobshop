<section class="vh-100 bg-dark">
    <div class="container  h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body ">

                        <h3 style="margin-top: 30px;" class="text-center">Add Category</h3>

                        {{#if responseErrCat}}
                        <p class="btn-danger">Already Exists</p>
                        {{/if}}
                        {{#if responseSuCat}}
                        <p class="btn-success">Brand Added Successfully</p>
                        {{/if}}

                        <form action="/admin/add-category" method="POST" enctype="multipart/form-data">
                            <div>
                                <label class="form-label" for="name">Name</label>
                                <input type="text" id="name" name="name" class="form-control form-control-lg" />
                            </div>


                            <div class="mt-3">
                                <label class="form-label" for="description">Description</label>
                                <input type="text" id="description" required name="description"
                                    class="form-control form-control-lg" />
                            </div>


                            <div class="mt-3">
                                <label class="form-label" for="quantity">Image</label>
                                <input type="file" id="image" name="image" class="form-control form-control-lg" />
                            </div>

                            <input type="text" name="status" value="true" style="display: none;">
                            <button class="mt-3 btn btn-primary btn-lg btn-block" type="submit"
                                onclick="return validateForm()">Add Category</button>
                        </form>

                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>